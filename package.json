{
  "name": "corontine-store",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:port": "node --inspect --inspect-port 9999 -r tsconfig-paths/register -r ts-node/register src/main.ts --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "sls:deploy:prod": "export NODE_ENV=production && cd components && yarn build:deploy && cd .. && sls deploy",
    "dev:all": "run-p components start:debug:port",
    "components": "cd components && yarn watch"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^6.10.14",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/swagger": "^4.4.0",
    "@nestjs/typeorm": "^7.0.0",
    "@types/uuid": "^7.0.2",
    "aws-lambda": "^1.0.5",
    "aws-serverless-express": "^3.3.8",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.1",
    "dotenv-flow": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "nestjs-typeorm-paginate": "^1.0.3",
    "nodemon": "^2.0.2",
    "novelcovid": "^1.0.7-b3",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "serverless-aws-static-file-handler": "^2.0.5",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.24",
    "typeorm-transactional-cls-hooked": "^0.1.12",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.1",
    "@types/node": "^12.12.31",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "serverless": "^1.67.0",
    "serverless-dotenv-plugin": "^2.3.2",
    "serverless-offline": "^6.1.2",
    "serverless-plugin-typescript": "^1.1.9",
    "supertest": "^4.0.2",
    "ts-jest": "25.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
